<!DOCTYPE html>
<html lang="en" class="full">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Sign up: Charcoal</title>

    <!-- Bootstrap Core CSS -->
    <link href="/../static/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- MetisMenu CSS -->
    <link href="/../static/bower_components/metisMenu/dist/metisMenu.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="/../static/dist/css/sb-admin-2.css" rel="stylesheet">
    <link href="/../static/dist/css/full.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="/../static/bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

    <div class="container-fluid col-lg-4 col-md-4 col-sm-4 col-xs-5 col-lg-offset-4 col-md-offset-4 col-sm-offset-4 col-xs-offset-4">
        <div class="row">
        
        <!-- Flash Messages -->
<!--
        [% IF status_msg %]
			<p>&nbsp;</p>
			<div class="alert alert-success alert-dismissable">
				<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
				<p align="center">[% status_msg %]</p>
			</div>
		[% END %]
			
		[% IF error_msg %]
			<p>&nbsp;</p>
        	        <div class="alert alert-warning alert-dismissable">
				<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
				<p align="center">[% error_msg %]</p>
            		</div>
            	[% END %]
-->
            	<!-- Flash Messages End --> 
            
                <div class="login-panel panel panel-defaul">
                    <div class="panel-heading">
                        <h1>Oops!</h1>
                        <h4>[% error_msg %]</h4>
                    </div>
                    <div class="panel-body">
                        <form role="form" action="[% submit_email %]" method="post">
                            <fieldset>
                                <div class="form-group">
                                    <label>Please re-try with correct E-mail.</label>
                                    <input class="form-control" placeholder="Enter your E-mail" name="email" type="email" autofocus required>
                                    
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input name="terms" type="checkbox" value="Accepted" required>I agree to the <a href="#">Terms & Conditions.</a>
                                        <input name="i_am_a_bot" type="hidden" value="Bot">
                                    </label>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <button class="btn btn-xl btn-success btn-block" width="50%" onclick="submit"><b>Next >></b></button>
                            </fieldset>
                        </form>
                    </div>
                    <div class="panel-footer">
                        <p>Need help? <a href="mailto:support@hopbox.in?subject=[% error_msg %]">Write to us</a>.</p>
                        <p align="center">&copy; Unmukti Technology Pvt Ltd, India</p>
                    </div>
                </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="../bower_components/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="../bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="../bower_components/metisMenu/dist/metisMenu.min.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="../dist/js/sb-admin-2.js"></script>

</body>

</html>
